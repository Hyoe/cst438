<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent" >

   <EditText
      android:layout_width="200dp"
      android:layout_height="40dp"
      android:id="@+id/fname"
      android:hint="Truck Name"
      android:textColor="#000000"
      android:textSize="15dp"
      android:layout_marginTop="36dp" android:layout_alignParentTop="true"
      android:layout_alignLeft="@+id/email"
      android:layout_alignStart="@+id/email"/>


   <EditText
      android:layout_width="200dp"
      android:layout_height="40dp"
      android:textColor="#000000"
      android:inputType="textEmailAddress"
      android:ems="10"
      android:id="@+id/email"
      android:hint="E-mail"
      android:textSize="15dp"
      android:layout_marginTop="18dp"
      android:layout_below="@+id/fname" android:layout_centerHorizontal="true"/>


   <EditText
      android:layout_width="200dp"
      android:layout_height="40dp"
      android:textColor="#000000"
      android:inputType="textPassword"
      android:ems="10"
      android:id="@+id/pword"
      android:hint="Password"
      android:textSize="15dp"
      android:layout_below="@+id/email" android:layout_centerHorizontal="true"
      android:layout_marginTop="15dp"/>

   <Button
      android:layout_width="200dp"
      android:layout_height="40dp"
      android:textColor="#000000"
      android:text="Register"
      android:id="@+id/register"
      android:textSize="13dp"
      android:layout_centerVertical="true"
      android:layout_centerHorizontal="true"/>

   <Button
      android:layout_width="200dp"
      android:layout_height="40dp"
      android:textColor="#000000"
      android:text="Back To Login"
      android:id="@+id/backToLogin"
      android:textSize="13dp" android:layout_below="@+id/register"
      android:layout_centerHorizontal="true" android:layout_marginTop="18dp"/>


</RelativeLayout>
